<link rel="stylesheet" href="/css/DangNhap.css">

<section class="login-content">
  <h2>Đăng ký tài khoản</h2>

  <form id="register-form" action="/DangKy" method="POST">
    <label for="username">Tên tài khoản:</label>
    <input type="text" id="username" name="username" placeholder="Nhập tên tài khoản" required>

    <label for="password">Mật khẩu:</label>
    <input type="password" id="password" name="password" placeholder="Nhập mật khẩu" required>

    <label for="repassword">Nhập lại mật khẩu:</label>
    <input type="password" id="repassword" name="repassword" placeholder="Nhập lại mật khẩu" required>

    <button type="submit" class="btn login-btn">Đăng ký</button>
  </form>

  <div class="links">
    <a href="/DangNhap">Đã có tài khoản? Đăng nhập</a>
  </div>
</section>

<script src="/js/DangNhap.js"></script>
